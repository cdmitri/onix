    "paths": {
        "/beat": {
            "post": {
                "description": "receives a heart bit from a host agent via HTTP",
                "produces": [
                    "text/plain"
                ],
                "tags": [
                    "Agent"
                ],
                "summary": "heart bit",
                "parameters": [
                    {
                        "description": "the unique key identifying the host sending the heart beat",
                        "name": "host-key",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}