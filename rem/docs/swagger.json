                },
                "key": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "core.Cmd": {
            "type": "object",
            "properties": {
                "function": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "input": {
                    "type": "object",
