apiVersion: v1
kind: ServiceAccount
metadata:
  name: artisan-runner
  namespace: ${NAMESPACE}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: manage-runs
  namespace: ${NAMESPACE}
rules:
  - apiGroups: ["tekton.dev"]
    resources: [
        "tasks",
        "taskruns",
        "pipelines",
        "pipelineruns",
        "pipelineresources",
        "triggerbindings",
        "triggertemplates",
        "eventlisteners",
        "conditions",
        "runs"
    ]
    verbs: [ "get", "list", "create", "update", "delete", "patch", "watch" ]

  - apiGroups: ["*"] # all api groups
    resources: [
        "secrets",
        "routes"
    ]
    verbs: [ "get", "list", "create", "update", "delete", "patch", "watch" ]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: manage-runs-rule
  namespace: ${NAMESPACE}
subjects:
  - kind: ServiceAccount
    name: artisan-runner
    namespace: ${NAMESPACE}
    apiGroup: ""
roleRef:
  kind: Role
  name: manage-runs
  apiGroup: rbac.authorization.k8s.io
...